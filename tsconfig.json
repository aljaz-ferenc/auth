{
	"compilerOptions": {
		"target": "ES2023",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"rootDir": "./src",
		"outDir": "./dist",
		"strict": true,
		"ignoreDeprecations": "6.0",
		"noUncheckedIndexedAccess": true,
		"exactOptionalPropertyTypes": true,
		"sourceMap": true,
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
